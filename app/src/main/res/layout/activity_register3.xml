<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danni.domiventas.Register3Activity"
    android:orientation="vertical"
    android:background="@drawable/fondodown">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imagenNegocio"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="Cambiar imagen"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:id="@+id/tCambiarImagen"/>


    <EditText
        android:id="@+id/eCostoEnvio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:inputType="textVisiblePassword"
        android:background="@drawable/recuadro"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Costo de Envio"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ePedidoMin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:inputType="textVisiblePassword"
        android:background="@drawable/recuadro"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Pedido Minimo"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/eTiempoEnvio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/recuadro"
        android:drawablePadding="12dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:hint="Tiempo de Envio (min)"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/bRegister"
            android:onClick="bRegister"
            android:text="Register"
            android:textColor="@color/primary_text"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/botonlogin"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:shadowColor="#564982"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>
</LinearLayout>
